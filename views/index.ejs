<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Home</title>
    <Link rel="stylesheet" href="./styles.css">
    </Link>
</head>

<body>
    <h1>Mini Messageboard</h1>

    <%- include("navbar") %>

        <div class="messages">
            <% messages.map((message)=> { %>
                <div class="message">
                    <h2>
                        <%= message.user %>
                    </h2>
                    <p>
                        <%= message.text %>
                    </p>
                    <p>
                        <%= message.added %>
                    </p>
                </div>

                <%});%>
        </div>

</body>

</html>